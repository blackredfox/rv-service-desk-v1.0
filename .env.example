# RV Service Desk - Environment Variables

# Database (Required - Neon/Supabase Transaction Pooler recommended for serverless)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
# SSL is enabled by default with Supabase pooler URLs
DATABASE_URL=""

# Firebase Auth (Required for authentication)
# Path to Firebase Admin service account JSON (default: secrets/firebase-admin.json)
FIREBASE_ADMIN_KEY_PATH="secrets/firebase-admin.json"
# Firebase Web API Key (required for password sign-in via REST)
FIREBASE_WEB_API_KEY=""
# Firebase project ID (optional - inferred from service account JSON if not set)
# FIREBASE_PROJECT_ID=""
# Session cookie duration in days (default: 7)
SESSION_COOKIE_DAYS="7"

# OpenAI API (Required for chat functionality)
OPENAI_API_KEY=""

# Stripe (Required for billing)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_ID_PREMIUM="price_1StuJhLmSEa773AhxEhZC1UK"
# STRIPE_PRICE_ID_PRO=""

# App Configuration
NEXT_PUBLIC_APP_NAME="RV Service Desk"
TERMS_VERSION="v1.0"

# App URL (for Stripe redirects in production)
APP_URL="http://localhost:3000"
